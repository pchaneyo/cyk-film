<?xml-model href="https://www.cyklang.net/schema/cyklang.xsd"?>
<module>

  <!--
    <db.table> creates or alters the table in Postgres DB
  -->

  <db.table  name="actor"  description="Actor table" >
    <number name="actor_id" dbtype="int" primary="" generated='by default'/>
    <string name="first_name" dbtype="varchar(255)" />
    <string name="last_name" dbtype="varchar(255)" />
    <datetime name="last_update" dbtype="timestamp with time zone" />
    <string name="cyk_remark" dbtype="varchar(255)" />
    <string name="birthdate" dbtype="date" />
    <string name="image" dbtype="bytea"/>
    <object name="image_meta" dbtype="jsonb"/>

  </db.table>

  <db.table name="film">
    <number name="film_id" dbtype="int" primary="" generated='by default'/>
    <string name="title" dbtype="varchar(255)" />
    <string name="description" dbtype="text" />
    <number name="release_year" dbtype="int"/>
    <number name="length" dbtype="int" />
    <number name="language_id" dbtype="int"/>
    <string name="image" dbtype="bytea"/>
    <object name="image_meta" dbtype="jsonb"/>
  </db.table>

  <db.table name="film_actor">
    <number name="film_actor_id" dbtype="int" primary="" generated="by default"/>
    <number name="actor_id" dbtype="int"/>
    <number name="film_id" dbtype="int"/>
    <number name="length" dbtype="int"/>
  </db.table>

  <print>"Module db_init has been executed"</print>
  <alert><message>"Module cine_init has been executed"</message></alert>
</module>
